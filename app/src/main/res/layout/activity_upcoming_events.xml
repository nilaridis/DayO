<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <!-- Header -->
    <include
        android:id="@+id/header"
        layout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/navigationBar"
        layout="@layout/activity_navigationbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/navigationBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Upcoming Events ðŸ“…"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/activityCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkColor">

                    <ImageView
                        android:id="@+id/activityImage1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/exampleimage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintDimensionRatio="1" />

                    <TextView
                        android:id="@+id/activityTitle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="horsing"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/activityImage1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityLocation1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Thessaloniki"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/activityTitle1"
                        app:layout_constraintStart_toEndOf="@id/activityImage1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/activityPrice1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12$"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/activityLocation1"
                        app:layout_constraintStart_toEndOf="@id/activityImage1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/activityDuration1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="30 minutes"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/activityPrice1"
                        app:layout_constraintStart_toEndOf="@id/activityImage1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <Button
                        android:id="@+id/bookNowButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More Info"
                        android:backgroundTint="@color/backgroundColor"
                        android:textColor="@color/lightColor"
                        app:layout_constraintTop_toBottomOf="@id/activityDuration1"
                        app:layout_constraintStart_toEndOf="@id/activityImage1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/activityImage1"
                        android:layout_marginTop="8dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/activityCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkColor">

                    <ImageView
                        android:id="@+id/activityImage2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/exampleimage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintDimensionRatio="1" />

                    <TextView
                        android:id="@+id/activityTitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="horsing"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/activityImage2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityLocation2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Thessaloniki"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/activityTitle2"
                        app:layout_constraintStart_toEndOf="@id/activityImage2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/activityPrice2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12$"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/activityLocation2"
                        app:layout_constraintStart_toEndOf="@id/activityImage2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/activityDuration2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="30 minutes"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/activityPrice2"
                        app:layout_constraintStart_toEndOf="@id/activityImage2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <Button
                        android:id="@+id/bookNowButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More Info"
                        android:backgroundTint="@color/backgroundColor"
                        android:textColor="@color/lightColor"
                        app:layout_constraintTop_toBottomOf="@id/activityDuration2"
                        app:layout_constraintStart_toEndOf="@id/activityImage2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/activityImage2"
                        android:layout_marginTop="8dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/activityCard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkColor">

                    <ImageView
                        android:id="@+id/activityImage3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/exampleimage"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintDimensionRatio="1" />

                    <TextView
                        android:id="@+id/activityTitle3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="horsing"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/activityImage3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activityLocation3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Thessaloniki"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/activityTitle3"
                        app:layout_constraintStart_toEndOf="@id/activityImage3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/activityPrice3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="12$"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/activityLocation3"
                        app:layout_constraintStart_toEndOf="@id/activityImage3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/activityDuration3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="30 minutes"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/activityPrice3"
                        app:layout_constraintStart_toEndOf="@id/activityImage3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <Button
                        android:id="@+id/bookNowButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More Info"
                        android:backgroundTint="@color/backgroundColor"
                        android:textColor="@color/lightColor"
                        app:layout_constraintTop_toBottomOf="@id/activityDuration3"
                        app:layout_constraintStart_toEndOf="@id/activityImage3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/activityImage3"
                        android:layout_marginTop="8dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add more Cards as needed with unique IDs -->

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
