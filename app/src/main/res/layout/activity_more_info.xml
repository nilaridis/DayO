<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_info_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="@id/header"
    android:background="@color/darkColor">


    <!-- Close Button (top right) -->
    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/close_icon"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/activityTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sunset Rock Climbing at Lycabettus"
        android:textColor="@color/lightColor"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/closeButton"
        app:layout_constraintBottom_toTopOf="@+id/activityImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Activity Image -->
    <ImageView
        android:id="@+id/activityImage"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:background="@drawable/exampleimage"
        app:layout_constraintTop_toBottomOf="@id/activityTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Location -->
    <TextView
        android:id="@+id/activityLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Location : Athens Lycabettus Hill"
        android:textColor="@color/backgroundColor"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/activityImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Price -->
    <TextView
        android:id="@+id/activityPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price : From 20$ per person"
        android:textAlignment="center"
        android:textColor="@color/backgroundColor"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/activityLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Duration -->
    <TextView
        android:id="@+id/activityDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Duration : ~2 hours"
        android:textAlignment="center"
        android:textColor="@color/backgroundColor"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/activityPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Description label -->
    <TextView
        android:id="@+id/labelDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description :"
        android:textColor="@color/backgroundColor"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/activityDuration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Description text -->
    <TextView
        android:id="@+id/activityDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc ullamcorper ipsum mi, vel vestibulum lectus commodo ac. Sed imperdiet tellus vitae velit auctor, nec volutpat turpis dignissim."
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/labelDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>